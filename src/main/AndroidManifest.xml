<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zeusro.wechatmagician"
    android:versionCode="47"
    android:versionName="2.7.2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".frontend.WMApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:fullBackupContent="@xml/backup_descriptor">

        <activity
            android:name=".frontend.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="de.robv.android.xposed.category.MODULE_SETTINGS" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".frontend.MainActivityAlias"
            android:targetActivity=".frontend.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <receiver
            android:name=".frontend.WechatStartupReceiver"
            android:label="StartupReceiver">
            <intent-filter>
                <action android:name="com.zeusro.wechatmagician.ACTION_WECHAT_STARTUP" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="@string/app_desc" />
        <meta-data
            android:name="xposedminversion"
            android:value="53" />
    </application>

</manifest>
